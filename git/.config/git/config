  signingKey = "67A0585801290DC6"

[transfer]
	fsckobjects = true

[fetch]
	fsckobjects = true

[receive]
	fsckobjects = true

[url "git@github.com:"]
	pushInsteadOf = "https://github.com/"

[includeIf "gitdir:~/src/dev/"]
	path = "~/.config/git/work"

