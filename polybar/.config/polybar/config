[colors]
    
    backgroundColor = #2E3440
    foregroundColor = #95C7AE

;--------------------------------------------
; bars                                      ;
;--------------------------------------------
[global/wm]
	margin-top = 2
	margin-bottom = 2

[bar/bar]
    monitor = ${env:MONITOR:eDP-1}
	dpi      = 192
	width    = 100%
	height   = 26
	offset-x = 0
	offset-y = 0

	bottom = false

    foreground = ${colors.foregroundColor}
	background = ${colors.backgroundColor}

	border-top-size     = 0
	border-bottom-size  = 0
	border-top-color    = ${colors.backgroundColor}
	border-bottom-color = #000f0f0f

	spacing            = 0
	padding-left       = 0
	padding-right      = 0
	module-margin-left = 3
    
    font-N = <fontconfig pattern>;<vertical offset>
	font-0 = Wuncon Siji:size=4;2
	font-1 = Iosevka Term:pixelsize=4;2

	modules-left   = herbstluftwm
	modules-center = 
	modules-right  = volume cpu memory eth wlan battery temperature time-utc time-montreal

	fixed-center = true

	tray-position = right
	tray-padding = 0

    enable-ipc = true

[module/herbstluftwm]
type = custom/ipc
hook-0 = ~/.config/polybar/herbstluftwm.sh
initial = 1

[module/volume]
type = internal/alsa

format-volume = <bar-volume>
format-prefix = "V "

label-muted = sound muted
format-muted-foregroundd = #e57373
format-muted-background = ${colors.backgroundColor}

bar-volume-width = 10
bar-volume-foreground-0 = #55aa55
bar-volume-foreground-1 = #55aa55
bar-volume-foreground-2 = #55aa55
bar-volume-foreground-3 = #55aa55
bar-volume-foreground-4 = #55aa55
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 = #ff5555
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-indicator-foreground = ${colors.foregroundColor}
bar-volume-indicator-background = ${colors.backgroundColor}
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-fill-foreground = ${colors.foregroundColor}
bar-volume-fill-background = ${colors.backgroundColor}
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foregroundColor}
bar-volume-empty-background = ${colors.backgroundColor}

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "C "
label = %percentage%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = "M "
label = %percentage_used%%

[module/eth]
type = internal/network
interface = enp0s25
interval = 3.0

format-connected-prefix = "E "
label-connected = %local_ip%

format-disconnected =

[module/wlan]
type = internal/network
interface = wlp3s0
interval = 3.0

format-connected = <label-connected>
label-connected = %essid%

format-disconnected =

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP0
full-at = 98

format-charging-prefix = "B "
format-discharging-prefix = "B "

format-charging = <label-charging>
format-discharging = <label-discharging>

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <label>
format-prefix = "T "

format-warn = <label-warn>
format-warn-prefix = "T "

label = %temperature-c%
label-warn = %temperature-c%

[module/time-montreal]
type = custom/script
interval = 5
exec = TZ=America/Montreal date +"%Z: %H:%M"

[module/time-utc]
type = custom/script
interval = 5
exec = TZ=UTC date +"%Z: %H:%M"

[settings]
screenchange-reload = true